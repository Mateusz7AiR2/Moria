<Window x:Class="MoriaDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoriaDesktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen" WindowState="Maximized"
        AllowsTransparency="True" Background="Transparent" BorderBrush="#387478" BorderThickness="1.5">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!--#region Navigation panel-->

        <Grid Background="#F5F7F8"
              Opacity="0.9"/>

        <StackPanel 
                    Width="180"
                    Orientation="Vertical"
                    HorizontalAlignment="Left">

            <!--#region Titlebar-->

            <Grid Height="30"
                  VerticalAlignment="Top"
                  Margin="0, 10, 0, 0">
                <Border Background="#D61734"
                        Height="30"
                        CornerRadius="3, 0, 0, 3"
                        Width="6"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Right"/>

                <TextBlock Text="MoriaDesktop"
                           Foreground="#33372C"
                           FontSize="20"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
            </Grid>

            <!--#endregion-->

            <!--#region  Main menu-->

            <TreeView Background="Transparent" BorderThickness="0">
                <TreeView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}"
                                           Foreground="#33372C"
                                           VerticalAlignment="Center"
                                           FontWeight="Medium"
                                           FontSize="15"/>
                    </DataTemplate>
                </TreeView.ItemTemplate>
                <TreeViewItem Header="CRM">
                    <TreeViewItem.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}"
                                           Foreground="#33372C"
                                           VerticalAlignment="Center"
                                           FontWeight="Medium"
                                           FontSize="15"/>
                        </DataTemplate>
                    </TreeViewItem.HeaderTemplate>
                    <TreeViewItem Header="Kontakty">
                        <TreeViewItem.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"
                                           Foreground="#33372C"
                                           VerticalAlignment="Center"
                                           FontWeight="Medium"
                                           FontSize="15"/>
                            </DataTemplate>
                        </TreeViewItem.HeaderTemplate>
                    </TreeViewItem>
                </TreeViewItem>
            </TreeView>
            
            <Menu Height="Auto" 
                  Background="Transparent"
                  Margin="0, 20, 0, 0">

                <!--<Menu.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel Orientation="Vertical"/>
                        
                    </ItemsPanelTemplate>
                </Menu.ItemsPanel>-->

                <MenuItem Header="Home">
                    <MenuItem Header="Test">
                        <!--<MenuItem.HeaderTemplate>
                        <DataTemplate>
                            <Grid>
                                <TextBlock Text="Home" 
                                           Foreground="#33372C"
                                           VerticalAlignment="Center"
                                           FontWeight="Medium"
                                           FontSize="15"/>
                            </Grid>
                        </DataTemplate>
                    </MenuItem.HeaderTemplate>-->
                        <!--Template="{StaticResource Menu_Template}"-->
                        <MenuItem.Icon>
                            <Image Source="/MoriaDesktop;component/Images/homeColor.png"
                               Stretch="None"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>

            </Menu>

            <!--#endregion-->

        </StackPanel>

        <!--#endregion-->

        <Grid Grid.Column="1"
              Background="#F5F7F8"
              Opacity="1"/>

        <Image Source="Images/homeColor.png" Grid.Column="1" Stretch="Uniform" Width="100" HorizontalAlignment="Left"/>

    </Grid>
</Window>
