                        <DataTemplate>
                            <Grid>
                                <TextBlock Text="Home" 
                                           Foreground="#33372C"
                                           VerticalAlignment="Center"
                                           FontWeight="Medium"
                                           FontSize="15"/>
                            </Grid>
                        </DataTemplate>
                    </MenuItem.HeaderTemplate>-->
            <!--Template="{StaticResource Menu_Template}"-->
            <!--
                        <MenuItem.Icon>
                            <Image Source="/MoriaDesktop;component/Images/homeColor.png"
                               Stretch="None"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>

            </Menu>-->

            <!--#endregion-->

        </StackPanel>

        <!--#endregion-->

        <Border Grid.Column="1"           
                Background="#F8F8F8"
                Opacity="1"
                Margin="15"
                CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" Direction="225" Color="LightGray" Opacity="0.7" ShadowDepth="10"/>
            </Border.Effect>
        </Border>

        <Image Source="Images/homeColor.png" Grid.Column="1" Stretch="Uniform" Width="100" HorizontalAlignment="Center"/>

    </Grid>
</Window>
